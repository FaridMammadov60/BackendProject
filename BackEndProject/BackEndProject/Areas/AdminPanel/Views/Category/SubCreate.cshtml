@model Category
@{
    ViewData["Title"] = "SubCreate";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


  <div class="card card-light">
              <div class="card-header">
                <h3 class="card-title">Create New Category</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-sm-3">
                      <!-- text input -->
                      <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Name ...">
                        <span  class="text-danger" asp-validation-for="Name"></span>
                      </div>
                    </div>
                  </div>                      
    
                  
                  <div class="row">
                    <div class="col-sm-3">
                      <!-- text input -->
                      <div class="form-group">
                        <label asp-for="Parent">Custom Select</label>
                       
                        <select id="select" asp-for="ParentId" asp-items="@ViewBag.CategoriesCreate" class="custom-select">
                            <option selected>Open this select menu</option>
                        </select>
                        <span  class="text-danger" asp-validation-for="ParentId"></span>
                      </div>
                    </div>
                  </div>

                   <div class="row">
                    <div class="col-sm-3">
                      <!-- text input -->
                      <div class="form-group">
                        <label asp-for="@Model.Image"></label><br />
                        <input  asp-for="@Model.Image">
                        <span  class="text-danger" asp-validation-for="Image"></span>
                      </div>
                    </div>
                  </div>
                 <button type="submit" class="btn btn-success">Submit</button> 
                 <a asp-controller="brand" asp-action="index" class="btn btn-danger">Cancel</a>
                </form>

                 <a class="btn btn-dark" asp-action="index"> Go Back</a>
              </div>
              <!-- /.card-body -->
            </div>

<script src="~/admin/plugins/jquery/jquery.min.js"></script>

