@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int no = 0;
    int dno = 0;
}

 <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">           
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Home</a></li>
              <li class="breadcrumb-item active">Product</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Product</h3>
                </div>
                 <div>
                   <a asp-controller="product" asp-action="create" class="btn btn-primary ml-4">Create Product</a>
               </div> <br />
              
              <!-- /.card-header -->
              <div class="card-body">

                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                      <tr>
                          <th style="background-color: greenyellow" colspan="9">Product Table</th>
                      </tr>
                  <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Price</th>                    
                    <th>InStock</th>
                    <th>StockCount</th>
                    <th>CategoryId</th>
                    <th>BrandId</th>
                    <th>Image</th>                   
                    <th>Setting</th>
                  </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                      {
                          if (item.IsDeleted==false)
                          {
                             no++;
                               <tr>
                              <td>@no</td>
                              <td>@item.Name</td>
                              <td>@item.Price</td>                                                         
                              <td>@item.InStock</td>
                              <td>@item.StockCount</td>                            
                              <td>@item.CategoryId</td>
                              <td>@item.BrandId</td>
                              @foreach (var shekil in item.ProductImage)
                                 {
                                  <td><img width="200" height="150" src="~/assets/images/product/@shekil.ImageUrl" > </td>
                                    break;
                                 }
                                                           
                              <td>
                                  <a class="btn btn-secondary" asp-action="update" asp-route-id="@item.Id"> <box-icon name='edit-alt'></box-icon></a>
                                   <a class="btn btn-primary" asp-action="detail" asp-route-id="@item.Id"> <box-icon name='message-rounded-edit'></box-icon></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id"><box-icon name='message-alt-x'></box-icon></a>
                              </td> 
                             </tr>
                          }
                      }
                  </tbody>               
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>   


    <!-- Deleted Files -->

     <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Deleted Files</h3>
                </div>
              <!-- /.card-header -->
           <div class="card-body">

                <table id="example2" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Setting</th>
                  </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                      {
                           if (item.IsDeleted)
                          {
                             dno++;
                               <tr>
                              <td>@dno</td>
                              <td>@item.Name</td>
                             @foreach (var shekil in item.ProductImage)
                                 {
                                  <td><img width="200" height="150" src="~/assets/images/product/@shekil.ImageUrl" > </td>
                                    break;
                                 }
                              <td>
                                  <a class="btn btn-secondary" asp-action="update" asp-route-id="@item.Id"> <box-icon name='edit-alt'></box-icon></a>
                                   <a class="btn btn-primary" asp-action="detail" asp-route-id="@item.Id"> <box-icon name='message-rounded-edit'></box-icon></a>
                                    <a class="btn btn-danger" asp-action="restore" asp-route-id="@item.Id"><box-icon name='reset'></box-icon></a>
                              </td> 
                             </tr>
                          }
                      }
                  </tbody>
                 @* <tfoot>
                  <tr>
                   <th>No</th>
                    <th>Name</th>
                    <th>Desc</th>
                    <th>Setting</th>
                  </tr>
                  </tfoot>*@
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <!-- DataTables  & Plugins -->
<script src="~/admin/plugins/jquery/jquery.min.js"></script>
<script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/admin/plugins/jszip/jszip.min.js"></script>
<script src="~/admin/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/admin/plugins/pdfmake/vfs_fonts.js"></script>
<script src="~/admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
